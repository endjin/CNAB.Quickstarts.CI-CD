    "test": "jest",
    "package": "tsc && ncc build lib/main.js"
  },
  "author": "endjin",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/io": "^1.0.1",
    "@types/json2md": "^1.5.0",
    "js-yaml": "^3.13.1",
    "json2md": "^1.6.5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.0.4",
    "@types/uuid": "^3.4.5",
    "@zeit/ncc": "^0.20.5",
    "husky": "^3.0.7",
    "jest": "^24.8.0",
    "jest-circus": "^24.7.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1",
    "uuid": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run package && git add lib/* && git add dist/*"
